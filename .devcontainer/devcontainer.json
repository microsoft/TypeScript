{
    "name": "Node.js",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "18"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "icon": "terminal-bash"
                    }
                }
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "dprint.dprint"
            ]
        }
    },
    "remoteUser": "node"
}
