        "eslint-plugin-no-null": "^1.0.2",
        "fancy-log": "latest",
        "fs-extra": "^9.1.0",
        "glob": "latest",
        "gulp": "^4.0.2",
        "gulp-concat": "latest",
        "gulp-insert": "latest",
        "gulp-newer": "latest",
        "gulp-rename": "latest",
        "gulp-sourcemaps": "latest",
        "merge2": "latest",
        "minimist": "latest",
        "mkdirp": "latest",
        "mocha": "latest",
