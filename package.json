        "azure-devops-node-api": "^11.2.0",
        "chai": "latest",
        "chalk": "^4.1.2",
        "del": "^6.1.1",
        "diff": "^5.1.0",
        "eslint": "^8.22.0",
        "eslint-formatter-autolinkable-stylish": "^1.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.3.6",
